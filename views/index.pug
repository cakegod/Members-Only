extends layout

block content
  header
  if currentUser
    h1 Welcome #{currentUser.username} 
    h2 Membership Status: #{currentUser.membership}
  else
    h1 Please login
  body
  if currentUser && currentUser.membership === "newbie"
    h2 You have to join the club to see the messages 
  else if currentUser
    each message in messages 
      div(class="msg-container") 
        h3 title: #{message.title}
        h4 description: #{message.description}
        h4 member: #{message.author.username}
        h4 date: #{message.date}
  
    