extends layout 

block content
  head 
    h1 Login
  if !currentUser
  form(action="" method="POST")
    section
      label(for="username") Username
      input(name="username" type="text" required)
    section  
      label(for="password") Password
      input(name="password" type="password" required)
    button(type="submit") Login
  if errors
   ul
     for error in errors
         li!= error.msg