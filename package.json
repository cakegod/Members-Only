{
	"name": "party-bag",
	"version": "1.0.0",
	"description": "A simple inventory app as an express-pug experiment",
	"main": "dist/index.js",
	"scripts": {
		"start": "node ./dist/index.js",
		"build": "rm -rf ./dist/* && tsc",
		"start:dev": "nodemon dist/index.js",
		"build:dev": "tsc --watch --preserveWatchOutput",
		"serve": "concurrently \"npm run build:dev\" \"tsc-alias -w\" \"npm run start:dev\"",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Lofty-Brambles/party-bag.git"
	},
	"keywords": [],
	"author": "",
	"license": "GNU GPL v3",
	"bugs": {
		"url": "https://github.com/Lofty-Brambles/party-bag/issues"
	},
	"homepage": "https://github.com/Lofty-Brambles/party-bag#readme",
	"dependencies": {
		"async": "^3.2.4",
		"debug": "~4.3.4",
		"dotenv": "^16.0.3",
		"express": "~4.18.1",
		"express-validator": "^6.14.2",
		"helmet": "^6.0.0",
		"http-errors": "~2.0.0",
		"module-alias": "^2.2.2",
		"morgan": "~1.10.0",
		"pug": "3.0.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.+(ts)": [
			"eslint --fix",
			"prettier --write"
		]
	},
	"nodemonConfig": {
		"watch": [
			"src",
			"views"
		]
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"devDependencies": {
		"@types/debug": "^4.1.7",
		"@types/express": "^4.17.14",
		"@types/http-errors": "1.8.2",
		"@types/morgan": "^1.9.3",
		"@types/node": "^18.7.23",
		"@typescript-eslint/eslint-plugin": "^5.38.1",
		"@typescript-eslint/parser": "^5.38.1",
		"concurrently": "^7.4.0",
		"eslint": "^8.24.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^3.5.1",
		"eslint-plugin-import": "^2.26.0",
		"husky": "^8.0.1",
		"nodemon": "^2.0.20",
		"prettier": "^2.7.1",
		"tsc-alias": "^1.7.0",
		"typescript": "^4.8.4"
	}
}
